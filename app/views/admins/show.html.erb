<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Admin Information</h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">Details and attributes.</p>
  </div>
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Name</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @admin.name %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Email</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @admin.email %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Phone</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @admin.phone %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Role Level</dt>
        <dd class="mt-1 text-sm text-gray-900">Level <%= @admin.role_level %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Status</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <span class="<%= @admin.active_status ? 'text-green-600' : 'text-red-600' %>">
            <%= @admin.active_status ? 'Active' : 'Inactive' %>
          </span>
        </dd>
      </div>
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Created At</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @admin.created_at.strftime("%B %d, %Y") %></dd>
      </div>
    </dl>
  </div>
  <div class="bg-gray-50 px-4 py-4 sm:px-6">
    <%= link_to 'Edit', edit_admin_path(@admin), class: "text-indigo-600 hover:text-indigo-900" %>
    <%= link_to 'Back to List', admins_path, class: "ml-4 text-gray-600 hover:text-gray-900" %>
  </div>
</div>
